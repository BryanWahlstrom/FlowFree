<div class="row">
  <div class="span10 offset1">
    <h1><%= @rivers.first.state %></h1>
  </div>
</div>

<div class="row">
  <div class="span6">
      <h4>Map</h4>
    <div class="state-map">
      <p>THIS IS A MAP OF <%= @rivers.first.state %></p>
    </div>
  </div>
  <div class="span6">
      <h4>Info</h4>
    <div class="state-info">
      <p><%= @rivers.first.state %> Graphs</p>
    </div>
  </div>
</div>

<div class="row">
  <div class="span12 state-gage-table">
    <%= form_tag rivers_path, :method =>'get' do %>
      <p>
        <%= text_field_tag :search, params[:search] %>
        <%= submit_tag "Search", :name => nil %>
      </p>
      <% end %>
    <table>
      <thead>
        <tr>
          <th>Site name</th>
          <th>Site code</th>
          <th>Refresh time</th>
          <th>Latitude</th>
          <th>Longitude</th>
          <th>County</th>
          <th>Flow</th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @rivers.each do |river| %>
          <tr>
            <td><%= river.site_name %></td>
            <td><%= river.site_code %></td>
            <td><%= river.refresh_time %></td>
            <td><%= river.latitude %></td>
            <td><%= river.longitude %></td>
            <td><%= river.county_id %></td>
            <td><%= river.cfs_value %></td>
            <td><%= link_to 'details', river %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
    <div class='span8 offset2'>
      <%= will_paginate @rivers %>
    </div>

