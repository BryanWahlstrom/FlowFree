<!DOCTYPE html>
<html>
<head>
  <title>FlowFree</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container">
    <div class="row" id="header">
      <div class="span6">
        <h1>FreeFlow</h1>
      </div>
      <div class="span6">
<!-- LOGIN FORM -->
        <%= simple_form_for @user do |f| %>
          <%= f.input :email %>
          <%= f.input :password %>
          <%= f.button :submit %>
        <% end%>
      </div>
    </div>
    <div class="row span12">
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
      <%= yield %>
    </div>
    <div class="row">
      <div class="span12">

      </div>
    </div>

  </div>

</body>
</html>
